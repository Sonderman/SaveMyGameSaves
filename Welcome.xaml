<Window x:Class="SaveMyGameSaves.Welcome"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SaveMyGameSaves"
        mc:Ignorable="d"
        Title="Welcome" Height="300" Width="450" Background="AntiqueWhite">

    <Border Padding="10">
        
        <StackPanel VerticalAlignment="Center">
            <TextBlock HorizontalAlignment="Center" >Welcome to SMGS</TextBlock>
            <Button x:Name="btn_Login" Content="Login To Google Drive" Click="btn_Login_Click"/>
        </StackPanel>

    </Border>

</Window>
